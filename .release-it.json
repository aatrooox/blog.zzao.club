{
  "plugins": {
    "release-it-pnpm": {},
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "writerOpts": {
        "commitPartial": "* {{header}} ([{{hash}}](https://github.com/aatrooox/blog.zzao.club/commit/{{hash}}))\n",
        "mainTemplate": "{{> header}}\n\n{{#each commitGroups}}\n\n{{#if title}}\n### {{title}}\n\n{{/if}}\n{{#each commits}}\n{{> commit root=@root}}\n{{/each}}\n{{/each}}\n\n{{> footer}}"
      }
    }
  },
  "github": {
    "release": false
  },
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": false,
    "requireUpstream": false,
    "requireCommits": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "push": false,
    "changelog": true
  },
  "hooks": {
    "after:release": "git push gitea --follow-tags && git push github --follow-tags"
  },
  "npm": false
}