{
  "plugins": {
    "release-it-pnpm": {
      "disableRelease": true,
      "inFile": "CHANGELOG.md"
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "ğŸ”¥ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ©¹ Fixess"
          },
          {
            "type": "chore",
            "section": "ğŸ« Chores"
          },
          {
            "type": "docs",
            "section": "ğŸ“– Documentation"
          },
          {
            "type": "style",
            "section": "âœ… Styles"
          },
          {
            "type": "refactor",
            "section": "âœ… Code Refactoring"
          },
          {
            "type": "perf",
            "section": "âœ… Performance Improvements"
          },
          {
            "type": "test",
            "section": "âœ… Tests"
          },
          {
            "type": "revert",
            "section": "âª Reverts"
          },
          {
            "type": "build",
            "section": "ğŸ‘·â€ Build"
          },
          {
            "type": "ci",
            "section": "ğŸ”§ CI"
          },
          {
            "type": "config",
            "section": "ğŸ”¨ CONFIG"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true,
      "commitUrlFormat": "https://github.com/aatrooox/blog.zzao.club/commit/{{hash}}",
      "issueUrlFormat": "https://github.com/aatrooox/blog.zzao.club/issues/{{id}}",
      "compareUrlFormat": "https://github.com/aatrooox/blog.zzao.club/compare/{{previousTag}}...{{currentTag}}"
    }
  },
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": false,
    "requireUpstream": true,
    "requireCommits": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "push": true,
    "changelog": true
  },
  "npm": false
}