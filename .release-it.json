{
  "plugins": {
    "release-it-pnpm": {},
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "github": {
    "release": false
  },
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": false,
    "requireUpstream": false,
    "requireCommits": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "push": false,
    "changelog": true
  },
  "hooks": {
    "after:release": "git push gitea --follow-tags && git push github --follow-tags"
  },
  "npm": false
}